{% layout 'theme' %}  <!-- Ensure your layout is set to use the theme -->

{{ 'section-main-page.css' | asset_url | stylesheet_tag }} <!-- Link to the main stylesheet -->

{%- style -%}
<style>
    body {
        font-family: 'Futura Medium', sans-serif;
        color: #333;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
        text-align: center; /* Center align all text */
    }
    h2 {
        color: #00aaff;
        font-size: 24px;
        margin-top: 20px;
    }
    p {
        font-size: 18px;
        line-height: 1.6;
        color: #666;
        margin-top: 10px;
        margin-bottom: 20px; /* Add space between paragraphs */
        max-width: 600px; /* Set a maximum width for paragraphs */
        margin-left: auto; /* Center align */
        margin-right: auto; /* Center align */
    }
    img {
        max-width: 80%; /* Set a max-width */
        height: auto;   /* Maintain aspect ratio */
        display: block;
        margin: 20px auto; /* Center images */
    }
    p a {
        color: #b000aa;
        text-decoration: none;
        font-weight: bold;
        display: inline-block; /* Ensure links are inline-block for better spacing */
        margin-top: 10px; /* Add space above links */
    }
    p a:hover {
        text-decoration: underline;
    }
</style>
{%- endstyle -%}

<div class="color-{{ settings.color_scheme }} gradient">
  <div class="page-width page-width--narrow">
    <h2 class="page-title {{ settings.heading_size }}">
      Our Story
    </h2>

    <div class="rte">
      {% section 'custom-siren-city-origin' %}
      {% section 'custom-city-of-song' %}
      {% section 'custom-enchanted-inhabitants' %}
      {% section 'custom-magical-mix' %}
    </div>
  </div>
</div>
